@inject SignInManager<ApplicationUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HP_Project</title>
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://canvasjs.com/assets/css/jquery-ui.1.11.2.min.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="~/images/hplogo.png">
</head>
<body style="background-color: #f7f7f8; width:100%;">
    <div class="container-fluid" style="width: 100%">
           
            <div class="row  d-flex justify-content-center mb-4" style="background-color: #243a5e;">
                <nav class="navbar-fluid navbar-dark  mt-3" style="font-size: 120%;">
                    <ul class="nav nav-tabs">
                        <li class="nav-item" style="width:17%">
                            <img src="~/images/logo_new_hp.png" alt="Logo" style="width:10%;">
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Customer Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="ContactInfo" asp-action="Index">ContactInfo + Touchpoints</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Insights">Insights</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="CustomerFinancials">Customer Financials</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white border-bottom" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                               aria-expanded="false"
                               style="background-color: #243a5e;">
                                Upload
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink" >
                                <a asp-controller="Excel" asp-action="Index" class="dropdown-item">Upload Apollo</a>
                                <a asp-controller="Excel" asp-action="RevenueActuals" class="dropdown-item">Upload revactuals</a>
                            </div>
                        </li>
                    </ul>


                    <ul class="navbar-nav ml-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form method="post" asp-action="Logout" asp-controller="Account">
                                    <button type="submit" class="nav-link btn btn-link py-0" style="width:auto">
                                        Logout @User.Identity.Name
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a asp-action="Login" asp-controller="Account" class="nav-link">Login</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - HP_Project
            </div>
        </footer>
        <!--
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>-->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
        <!--customer financials-->
        <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
        <script src="https://canvasjs.com/assets/script/jquery-ui.1.11.2.min.js"></script>
        <script src="https://canvasjs.com/assets/script/jquery.canvasjs.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @RenderSection("Scripts", required: false)
</body>
</html>
